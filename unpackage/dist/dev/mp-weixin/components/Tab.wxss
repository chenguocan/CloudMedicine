
._ul,._li{
	list-style: none;
	margin: 0;
	padding: 0;
}
.tab-bar{
	font-size: 12px;
	color:black;
	width: 100%;
	border-top: 1px solid #f5f5f5;
	box-shadow: 1px 1px 3px gray;
	position: absolute;
	bottom:0;
}
.tab-bar>.tab-list{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
}
.tab-img{
	width: 35px;
	height: 30px;
}
.tab-item{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	margin: 5px 20px;
}
.tab-nav{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
}
.tab-font{
	width: 30px;
	margin-top: 3px;
	white-space: nowrap;
}

