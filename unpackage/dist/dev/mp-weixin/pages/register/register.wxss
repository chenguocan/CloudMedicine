
.register{
	height: 100%;
	background-color: #e1e1e1;
}
.form-item{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	height: 100rpx;
	width: 100%;
	background-color: white;
	border-bottom: 1px solid #e0e0e0;
}
.register-block{
	-webkit-transform: translateY(-50%);
	        transform: translateY(-50%);
}
.form-item label{
	width: 100rpx;
	height:60rpx;
	line-height:60rpx;
	vertical-align: middle;
	text-align: justify;
	text-align-last: justify;
	margin:0 60rpx 0 60rpx;
	color:#b04b87;
	font-weight: bold;
	white-space: nowrap;
	font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}
.form-item input{
	font-size: 13px;
}
.getCode{
	width: 180rpx;
	height: 60rpx;
	border-radius: 0px;
	background-color:#ea9a00;
	color:white;
	font-size: 12px;
	white-space: nowrap;
	margin-right: 70rpx;
}
.submitRegister{
	width: 620rpx;
	border-radius: 0;
	background-color: #b04b87;
	color:white;
	text-align: center;
	letter-spacing:20px;
	text-indent: 20px;
	line-height: 80rpx;
	-webkit-transform: translateY(-210rpx);
	        transform: translateY(-210rpx);
}

